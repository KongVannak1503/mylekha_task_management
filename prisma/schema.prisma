generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique @db.VarChar(191)
  name     String?
  password String?

  imageUrl      String? @db.VarChar(512)
  imagePublicId String? @db.VarChar(191)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdById Int?
  createdBy   User? @relation("UsersCreated", fields: [createdById], references: [id])

  updatedById Int?
  updatedBy   User? @relation("UsersUpdated", fields: [updatedById], references: [id])

  roles UserRole[]

  usersCreated User[] @relation("UsersCreated")
  usersUpdated User[] @relation("UsersUpdated")
}

model Role {
  id          Int     @id @default(autoincrement())
  name        String  @unique @db.VarChar(191) // admin, manager, user
  description String?

  users       UserRole[]
  permissions RolePermission[]
}

model Permission {
  id          Int     @id @default(autoincrement())
  name        String  @unique @db.VarChar(191) // task:create, task:update, user:manage
  description String?

  roles RolePermission[]
}

model UserRole {
  userId Int
  roleId Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
  @@index([roleId])
}

model RolePermission {
  roleId       Int
  permissionId Int

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([roleId, permissionId])
  @@index([permissionId])
}
